html {
  background: url(5243e3d23880307cab8f0616ffc0cb00) no-repeat center fixed;
  background-size: cover;
}

.app-container {
  background-color: #222;
  margin: 50px 50px 20px 250px;
  border-radius: 25px;
}

.page-container {
  padding: 50px;
  height: 600px;
  position: relative;
}

.page-container#home {
  text-align: center;
}

.page-container:not(#home) {
  display: none;
}

