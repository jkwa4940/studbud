.timer-container {
  background-color: red;
  height: 80vh;
  width: auto;
}

p {
  margin-bottom: 1vw;
  color: white;
  font-family: "Roboto";
}

h1, h2, h3, h4, h5 {
  margin: 3rem 0 1.38rem;
  font-family: "Roboto";
  font-weight: 700;
  line-height: 1.3;
  color: white;
}

h1 {
  margin-top: 0;
  font-size: 3vw;
}

h2 {
  font-size: 2.441rem;
}

h3 {
  font-size: 1.953rem;
}

h4 {
  font-size: 1.563rem;
}

h5 {
  font-size: 1.25rem;
}

small, .text_small {
  font-size: 0.8rem;
}

form {
  color: white;
  font-family: "Roboto";
}

nav {
  background-color: #1a1a1a;
  display: flex;
  justify-content: space-around;
  align-items: center;
  z-index: 1;
}

nav .nav-links {
  list-style: none;
  display: flex;
  margin: 0;
  padding: 0;
}

nav .nav-links .nav-item a {
  display: inline-block;
  text-decoration: none;
  font-family: "Bebas Neue";
  color: white;
  font-size: 2.5vw;
  padding: 0.5em 3em;
}

nav .nav-links .nav-item a:hover {
  color: #a6ffe9;
}

nav .nav-links .nav-item a.active {
  color: #00ffbf;
}

nav.vertical {
  width: 200px;
  height: 100%;
  position: fixed;
  left: 0%;
  top: 0;
  overflow: auto;
}

nav.vertical .nav-links {
  flex-direction: column;
}

nav.vertical .nav-links .nav-item a {
  padding: 25px 0 25px 0;
  text-decoration: none;
  font-size: 1.5em;
}

nav.vertical .nav-links .nav-item a i {
  margin: 0 10px 0 0;
}

.sub-nav {
  display: grid;
  align-items: center;
  padding: 10px;
  border-radius: 15px 15px 0 0;
}

@media screen and (max-width: 700px) {
  nav.vertical {
    width: 100%;
    height: auto;
    position: relative;
  }

  .nav-item a {
    float: left;
  }

  div.content {
    margin-left: 0;
  }
}

@media screen and (max-width: 400px) {
  .nav-item a {
    text-align: center;
    float: none;
  }
}