html {
  background: url(5243e3d23880307cab8f0616ffc0cb00) no-repeat center fixed;
  background-size: cover;
}

.app-container {
  background-color: #222;
  padding-left: 200px;
}

.page-container {
  margin-left: 10%;
  max-width: 80%;
  height: 90vh;
  position: relative;
}

.page-container#home {
  text-align: center;
}

.page-container:not(#home) {
  display: none;
}

p {
  margin-bottom: 1rem;
}

h1, h2, h3, h4, h5 {
  margin: 3rem 0 1.38rem;
  font-family: "Lato", sans-serif;
  font-weight: 700;
  line-height: 1.3;
}

h1 {
  margin-top: 0;
  font-size: 3.052rem;
}

h2 {
  font-size: 2.441rem;
}

h3 {
  font-size: 1.953rem;
}

h4 {
  font-size: 1.563rem;
}

h5 {
  font-size: 1.25rem;
}

small, .text_small {
  font-size: 0.8rem;
}

nav {
  background-color: #1a1a1a;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

nav .nav-links {
  list-style: none;
  display: flex;
  font-weight: bold;
}

nav .nav-links .nav-item a {
  display: inline-block;
  text-decoration: none;
  font-family: "Roboto";
  color: white;
  padding: 4em 0;
}

nav .nav-links .nav-item a:hover {
  color: #a6ffe9;
}

nav .nav-links .nav-item a.active {
  color: #00ffbf;
}

nav.vertical {
  width: 200px;
  height: 100%;
  flex-direction: row;
  position: fixed;
  left: 0%;
  top: 0;
}

nav.vertical .nav-links {
  flex-direction: column;
}

nav.vertical .nav-links .nav-item a {
  display: block;
  padding: 4em 0;
}