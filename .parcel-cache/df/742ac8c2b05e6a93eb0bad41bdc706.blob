@import url("https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap");
.app-container {
  background-color: #2b2b2b;
  padding-left: 120px;
}
.page-container {
  margin: 4em;
}
.page-container#home {
  text-align: center;
}
.page-container:not(#home) {
  display: none;
}
p {
  margin-bottom: 1rem;
}
h1, h2, h3, h4, h5 {
  margin: 3rem 0 1.38rem;
  font-family: "Lato", sans-serif;
  font-weight: 700;
  line-height: 1.3;
}
h1 {
  margin-top: 0;
  font-size: 3.052rem;
}
h2 {
  font-size: 2.441rem;
}
h3 {
  font-size: 1.953rem;
}
h4 {
  font-size: 1.563rem;
}
h5 {
  font-size: 1.25rem;
}
small, .text_small {
  font-size: 0.8rem;
}
nav {
  width: 100%;
  background-color: #3a3a3a;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
nav .nav-links {
  list-style: none;
  display: flex;
}
nav .nav-links .nav-item a {
  display: inline-block;
  text-decoration: none;
  font-family: "Roboto";
  color: white;
  padding: 4em 0;
}
nav .nav-links .nav-item a:hover {
  color: white;
}
nav .nav-links .nav-item a.active {
  font-weight: bold;
  color: #00ffbf;
}
nav.vertical {
  width: 120px;
  height: 100vh;
  flex-direction: row;
  position: absolute;
  left: 0%;
  top: 0;
}
nav.vertical .nav-links {
  flex-direction: column;
}
nav.vertical .nav-links .nav-item a {
  display: block;
  padding: 4em 0;
}