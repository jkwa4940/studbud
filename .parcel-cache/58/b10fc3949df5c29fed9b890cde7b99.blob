html {
  background: url(b7627e2cd244f2fdae9f05b3af18683b) no-repeat center fixed;
  background-size: cover;
}

.app-container {
  background-color: #222;
  margin: 50px 50px 20px 250px;
  border-radius: 25px;
}

.page-container {
  padding: 50px;
  height: 600px;
  position: relative;
}

.page-container#home {
  text-align: center;
}

.page-container:not(#home) {
  display: none;
}

.timer-container {
  background-color: #252525;
  height: 50vh;
  width: auto;
  border-radius: 0 0 25px 25px;
}

