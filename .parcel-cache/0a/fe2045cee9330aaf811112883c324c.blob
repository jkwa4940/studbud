* {
  margin: 0;
  padding: 0;
}

p {
  margin: 5px 0 10px 0;
}

html {
  background: url(nature.HASH_REF_ea7ca9a18505f3233eced77bff84ca94.jpg) no-repeat center fixed;
  background-size: cover;
}

.app-container {
  margin: none;
}

.page-container {
  background-color: #222;
  padding: 50px;
  border-radius: 15px;
  margin: 50px 50px 20px 250px;
  height: 600px;
  position: relative;
}

.page-container#home {
  text-align: center;
}

.page-container:not(#home) {
  display: none;
}

.timer-container {
  background-color: #252525;
  height: 50vh;
  width: auto;
  border-radius: 0 0 25px 25px;
}

@media only screen and (max-width: 800px) {
  .page-container {
    margin: 20px;
  }
}

