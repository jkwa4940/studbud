html {
  background: url(../img/nature.jpg) no-repeat center fixed;
  background-size: cover;
}

.app-container {
  background-color: #222;
  padding-left: 200px;
}

.page-container {
  margin-left: 10%;
  max-width: 80%;
  height: 600px;
  position: relative;
}
.page-container#home {
  text-align: center;
}
.page-container:not(#home) {
  display: none;
}

p {
  margin-bottom: 1rem;
  color: white;
  font-family: "Roboto";
}

h1, h2, h3, h4, h5 {
  margin: 3rem 0 1.38rem;
  font-family: "Roboto";
  font-weight: 700;
  line-height: 1.3;
  color: white;
}

h1 {
  margin-top: 0;
  font-size: 3.052rem;
}

h2 {
  font-size: 2.441rem;
}

h3 {
  font-size: 1.953rem;
}

h4 {
  font-size: 1.563rem;
}

h5 {
  font-size: 1.25rem;
}

small, .text_small {
  font-size: 0.8rem;
}

form {
  color: white;
  font-family: "Roboto";
}

nav {
  background-color: #1a1a1a;
  display: flex;
  justify-content: space-around;
  align-items: center;
  z-index: 1;
}
nav .nav-links {
  list-style: none;
  display: flex;
  font-weight: bold;
  margin: 0;
  padding: 0;
}
nav .nav-links .nav-item a {
  display: inline-block;
  text-decoration: none;
  font-family: "Roboto";
  color: white;
}
nav .nav-links .nav-item a:hover {
  color: #a6ffe9;
}
nav .nav-links .nav-item a.active {
  color: #00ffbf;
}

nav.vertical {
  width: 200px;
  height: 100%;
  position: fixed;
  left: 0%;
  top: 0;
  /**/
  overflow: auto;
}
nav.vertical .nav-links {
  flex-direction: column;
  /**/
  display: grid;
}
nav.vertical .nav-links .nav-item a {
  display: grid;
  /**/
  padding: 16px;
  /**/
  text-decoration: none;
}

.sub-nav {
  display: grid;
  align-items: center;
  padding: 25px;
}

