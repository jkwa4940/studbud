p {
  color: white;
  font-family: "Roboto";
  font-size: 1rem;
}
h1, h2, h3, h4, h5 {
  margin: 3rem 0 1.38rem;
  font-family: "Roboto";
  font-weight: 700;
  line-height: 1.3;
  color: white;
}
h1 {
  margin-top: 0;
  font-size: 2.912rem;
}
h2 {
  font-size: 2.441rem;
}
h3 {
  font-size: 1.953rem;
}
h4 {
  font-size: 1.563rem;
}
h5 {
  font-size: 1.25rem;
}
small, .text_small {
  font-size: 0.8rem;
}
form {
  color: white;
  font-family: "Roboto";
}
nav {
  background-color: #1a1a1a;
  display: flex;
  justify-content: space-around;
  list-style: none;
}
nav .nav-links {
  list-style: none;
  text-decoration: none;
  display: flex;
  margin: 0;
  padding: 0;
}
nav .nav-links .nav-item a {
  display: inline-block;
  text-decoration: none;
  font-family: "Bebas Neue";
  color: white;
  font-size: 1.5rem;
  padding: 0.5em 3em;
}
nav .nav-links .nav-item a:hover {
  color: #a6ffe9;
}
nav .nav-links .nav-item a.active {
  color: #00ffbf;
}
.nav-logo {
  padding: 25px 0 50px;
}
nav.vertical {
  width: 200px;
  height: 100%;
  position: fixed;
  left: 0%;
  top: 0;
  overflow: auto;
}
nav.vertical .nav-links {
  flex-direction: column;
}
nav.vertical .nav-links .nav-item a {
  padding: 25px 0 25px 0;
  text-decoration: none;
  font-size: 1.5em;
}
nav.vertical .nav-links .nav-item a i {
  margin: 0 10px 0 0;
}
.sub-nav {
  display: grid;
  align-items: center;
  padding: 10px;
  border-radius: 15px 15px 0 0;
}
@media only screen and (max-width: 800px) {
  nav.vertical {
    width: 75px;
  }

  .nav-item a {
    float: left;
  }

  div.content {
    margin-left: 0;
  }
}
@media only screen and (max-width: 800px) {
  nav.vertical {
    width: 100%;
    height: auto;
    position: relative;
  }

  .nav-item a {
    float: left;
  }

  div.content {
    margin-left: 0;
  }
}
@media only screen and (max-width: 600px) {
  .nav-item a {
    text-align: center;
    float: none;
  }
}
.stopwatch {
  display: grid;
  justify-items: center;
  grid-row-gap: 23px;
  width: 100%;
  padding-top: 25px;
}
.time {
  font-family: "Roboto Mono", monospace;
  color: white;
  background-color: #4c4c4c;
  font-weight: 300;
  font-size: 3.25rem;
  padding: 15px 50px 15px 50px;
  border-radius: 10px;
}
button {
  background-color: #00ffbf;
  border-radius: 10px;
  border: none;
  color: white;
  margin: 0 5px;
  font-size: 16px;
  cursor: pointer;
}
button:hover {
  color: white;
  background-color: white;
}
.stopwatch-buttons {
  display: flex;
  justify-content: space-between;
}
.buttonPlay img {
  padding: 15px 55px;
}
.buttonReset img {
  padding: 15px 55px;
}
#resetButton {
  width: 1rem;
  display: block;
}
#playButton {
  width: 1rem;
  display: block;
}
#pauseButton {
  width: 1rem;
  display: none;
}
/* The Modal (background) */
.modal {
  display: none;
  /* Hidden by default */
  position: fixed;
  /* Stay in place */
  z-index: 1;
  /* Sit on top */
  padding-top: 100px;
  /* Location of the box */
  left: 0;
  top: 0;
  width: 100%;
  /* Full width */
  height: 100%;
  /* Full height */
  overflow: auto;
  /* Enable scroll if needed */
  background-color: black;
  /* Fallback color */
  background-color: rgba(0, 0, 0, 0.4);
  /* Black w/ opacity */
}
/* Modal Content */
.modal-content {
  background-color: #fefefe;
  margin: auto;
  padding: 20px;
  border: 1px solid #888;
  width: 80%;
}
/* The Close Button */
.close {
  color: #aaaaaa;
  float: right;
  font-size: 28px;
  font-weight: bold;
}
.close:hover,
.close:focus {
  color: #000;
  text-decoration: none;
  cursor: pointer;
}
