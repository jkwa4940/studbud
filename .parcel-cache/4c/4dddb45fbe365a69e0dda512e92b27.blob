.app-container {
  background-color: #2b2b2b;
}

.page-container {
  margin: 0 4em 4em;
}

.page-container#home {
  text-align: center;
}

.page-container:not(#home) {
  display: none;
}

p {
  margin-bottom: 1rem;
}

h1, h2, h3, h4, h5 {
  margin: 3rem 0 1.38rem;
  font-family: "Lato", sans-serif;
  font-weight: 700;
  line-height: 1.3;
}

h1 {
  margin-top: 0;
  font-size: 3.052rem;
}

h2 {
  font-size: 2.441rem;
}

h3 {
  font-size: 1.953rem;
}

h4 {
  font-size: 1.563rem;
}

h5 {
  font-size: 1.25rem;
}

small, .text_small {
  font-size: 0.8rem;
}

nav {
  width: 120px;
  height: 100%;
  margin: 0;
  background-color: #646464;
  position: fixed;
  justify-content: space-around;
  align-items: center;
}

nav .nav-links {
  list-style: none;
  flex-direction: row;
}

nav .nav-links .nav-item a {
  display: block;
  text-decoration: none;
  color: white;
  padding: 4em 0;
}

nav .nav-links .nav-item a:hover {
  color: #abc;
}

nav .nav-links .nav-item a.active {
  font-weight: bold;
}

